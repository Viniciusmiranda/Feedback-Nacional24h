// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("gestor") // admin, gestor, atendente
  active    Boolean  @default(true)
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())

  @@map("users")
}

model Company {
  id        String   @id @default(uuid())
  displayId Int      @default(autoincrement())
  name      String
  slug      String   @unique
  
  // Novos campos adicionados
  area      String?
  whatsapp  String?
  
  domain    String?
  active    Boolean  @default(true)
  users     User[]
  attendants Attendant[]
  associations Association[]
  whatsappLogs WhatsappLog[]
  lnAssistLogs LnAssistLog[]
  createdAt  DateTime    @default(now())

  // Customization
  logo         String?
  primaryColor String?
  plan         String   @default("GRATIS") // GRATIS, PEQUENAS, GRANDES
  settings     String?  // Armazena config flexível (perguntas, ordem, etc) - SQLite no JSON
  notifications String? // Armazena config de integrações (WhatsApp, triggers) - SQLite no JSON
  allowedIntegrations String? // JSON string: ["whatsapp", "lnassist"]

  @@map("empresas")
}

model Attendant {
  id        String   @id @default(uuid())
  displayId Int      @default(autoincrement())
  name      String
  email     String?
  phone     String? // Add phone
  integrationId String? // Add Integration ID
  sector        String?
  notify        Boolean @default(true)
  active    Boolean  @default(true)
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  reviews   Review[]
  createdAt DateTime @default(now())

  @@map("atendentes")
}

model Review {
  id          String    @id @default(uuid())
  displayId   Int       @default(autoincrement())
  stars       Int
  comment     String?
  device      String?
  ip          String?
  city        String?
  state       String?
  location    String? // maps link
  attendantId String
  attendant   Attendant @relation(fields: [attendantId], references: [id])
  createdAt   DateTime  @default(now())

  @@map("avaliacoes")
}

model Suggestion {
  id        Int      @id @default(autoincrement())
  text      String
  likes     Int      @default(0)
  dislikes  Int      @default(0)
  createdAt DateTime @default(now())

  @@map("suggestions")
}

model Association {
  id        String   @id @default(uuid())
  name      String
  logo      String?  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())

  @@map("associations")
}

model WhatsappLog {
  id        Int      @id @default(autoincrement())
  companyId String
  company   Company? @relation(fields: [companyId], references: [id]) // Relation is optional for loose coupling or mandatory? Mandatory.
  phone     String
  message   String
  notes     String?
  createdAt DateTime @default(now())

  @@map("avisos_whatsapp")
}

model LnAssistLog {
  id            Int      @id @default(autoincrement())
  companyId     String
  company       Company? @relation(fields: [companyId], references: [id])
  status        String   // situacao_atendimento
  plate         String?  // placa
  association   String?  // associacao
  corporateName String?  // razao_social
  attendant     String?  // atendente (nome string ou relation?) String for simplicy as requested
  phone         String?  // telefone_associado
  serviceDate   DateTime // data_hora_atendimento
  createdAt     DateTime @default(now())

  @@map("lnassist")
}
