// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("gestor") // admin, gestor, atendente
  active    Boolean  @default(true)
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())

  @@map("users")
}

model Company {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  
  // Novos campos adicionados
  area      String?
  whatsapp  String?
  
  domain    String?
  active    Boolean  @default(true)
  users     User[]
  attendants Attendant[]
  createdAt  DateTime    @default(now())

  // Customization
  logo         String?
  primaryColor String?
  plan         String   @default("GRATIS") // GRATIS, PEQUENAS, GRANDES
  settings     String?  // Armazena config flexível (perguntas, ordem, etc) - SQLite no JSON
  notifications String? // Armazena config de integrações (WhatsApp, triggers) - SQLite no JSON

  @@map("empresas")
}

model Attendant {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String? // Add phone
  integrationId String? // Add Integration ID
  sector        String?
  notify        Boolean @default(true)
  active    Boolean  @default(true)
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  reviews   Review[]
  createdAt DateTime @default(now())

  @@map("atendentes")
}

model Review {
  id          String    @id @default(uuid())
  stars       Int
  comment     String?
  device      String?
  ip          String?
  city        String?
  state       String?
  location    String? // maps link
  attendantId String
  attendant   Attendant @relation(fields: [attendantId], references: [id])
  createdAt   DateTime  @default(now())

  @@map("avaliacoes")
}